{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
<div class="main white container">
<h1>Card list</h1>

    <table class="records_list" style="table-layout:fixed;width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pack</th>
                <th>Position</th>
                <th>Code</th>
                <th>Faction</th>
                <th>Type</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_card_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.pack.name }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.faction.name }}</td>
                <td>{{ entity.type.name }}</td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_card_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_card_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_card_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
    {% endblock %}
