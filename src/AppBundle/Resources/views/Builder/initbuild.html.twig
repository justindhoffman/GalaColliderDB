{% extends 'AppBundle::layout.html.twig' %}
{% import "AppBundle::macros.html.twig" as macros %}

{% block body %}

<div class="main white container">

<form action="{{ path('deck_initbuild') }}" method="post" enctype="application/x-www-form-urlencoded">
<div class="row">
  <div class="col-md-12">
    <h1>Choose your faction</h1>
    <div class="row">
      {% for faction in factions %}
      <div class="col-md-3 col-sm-4">
        <label class="thumbnail">
          <img src="{{ asset('/bundles/app/images/faction_icons/' ~ faction.code ~ '.svg') }}" class="hidden-xs">
          <div class="caption text-center" style="white-space:nowrap">
              <input type="radio" name="faction" value="{{ faction.code }}"> <small>{{ faction.name }}</small>
          </div>
        </label>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <button type="submit" class="btn btn-primary btn-block">Create the deck and start building</button>
  </div>
</div>
</form>

</div>

{% endblock %}
